<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="@color/BackgroundStyleColor"
    >
<RelativeLayout
    android:id="@+id/no_sign_in_layout"
    android:background="@color/white"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <com.example.yuanmu.lunbo.Custom.MyView
        android:id="@+id/no_sign_in"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        >
    </com.example.yuanmu.lunbo.Custom.MyView>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/no_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:textSize="@dimen/navigation_font_unified_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户登录"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆后可进行更多操作"
            />
    </LinearLayout>
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/right_arrow"
        />
</RelativeLayout>
</LinearLayout>