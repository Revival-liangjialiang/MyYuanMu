<?xml version="1.0" encoding="utf-8"?>
<com.example.yuanmu.lunbo.Util.PercentLinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="40%w"
        app:layout_widthPercent="100%w">
        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/roll_view_pager_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rollviewpager_hint_gravity="center"
            app:rollviewpager_hint_paddingBottom="0dp"
            app:rollviewpager_hint_paddingLeft="0dp"
            app:rollviewpager_hint_paddingRight="0dp"
            app:rollviewpager_hint_paddingTop="0dp"
            app:rollviewpager_play_delay="5000">
        </com.jude.rollviewpager.RollPagerView>
    </LinearLayout>
    <LinearLayout
        android:background="@android:color/white"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <com.example.yuanmu.lunbo.Custom.MyView
                    android:layout_centerHorizontal="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/MyView_1"
                    >
                </com.example.yuanmu.lunbo.Custom.MyView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <com.example.yuanmu.lunbo.Custom.MyView
                    android:layout_centerHorizontal="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/MyView_2"
                    >
                </com.example.yuanmu.lunbo.Custom.MyView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <com.example.yuanmu.lunbo.Custom.MyView
                    android:layout_centerHorizontal="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/MyView_3"
                    >
                </com.example.yuanmu.lunbo.Custom.MyView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <com.example.yuanmu.lunbo.Custom.MyView
                    android:layout_centerHorizontal="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/MyView_4"
                    >
                </com.example.yuanmu.lunbo.Custom.MyView>
            </RelativeLayout>
            <!--                              -->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文本"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文本"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文本"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文本"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="20%w"
        app:layout_widthPercent="100%w">
        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/roll_view_pager_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rollviewpager_hint_gravity="right"
            app:rollviewpager_hint_paddingBottom="0dp"
            app:rollviewpager_hint_paddingLeft="0dp"
            app:rollviewpager_hint_paddingRight="0dp"
            app:rollviewpager_hint_paddingTop="0dp"
            app:rollviewpager_play_delay="5000">
        </com.jude.rollviewpager.RollPagerView>
    </LinearLayout>
</com.example.yuanmu.lunbo.Util.PercentLinearLayout>