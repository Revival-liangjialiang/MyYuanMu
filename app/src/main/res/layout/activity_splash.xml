<com.example.yuanmu.lunbo.Custom.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                     android:orientation="vertical"
                                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     >

    <ImageView
        android:id="@+id/rl_root"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_heightPercent="85%h"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/mylove" />
<com.example.yuanmu.lunbo.Custom.PercentLinearLayout
    android:gravity="center"
    android:background="#BDE8A3"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_heightPercent="15%h"
    android:layout_alignParentBottom="true"
    >
    <ImageView
        android:background="@mipmap/myicon_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="80%h"
        app:layout_widthPercent="80%h"
        />
    <TextView
        android:paddingRight="10dp"
        android:textColor="#D693C6"
        android:textStyle="italic"
        android:textSize="28sp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="遇见对的你"
        />
</com.example.yuanmu.lunbo.Custom.PercentLinearLayout>
</com.example.yuanmu.lunbo.Custom.PercentLinearLayout>