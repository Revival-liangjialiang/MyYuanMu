<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<ScrollView
    android:id="@+id/c_scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
<LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!-- 导航布局 -->
    <RelativeLayout
        android:background="@color/StyleColor"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <TextView
            android:id="@+id/content_activity_back"
            android:textColor="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            />
        <TextView
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动"
            />
        <ImageView
            android:src="@drawable/activity_content_ic_list_black"
            android:layout_marginRight="8dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <!-- 导航下面的大图 -->
    <com.example.yuanmu.lunbo.Custom.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.example.yuanmu.lunbo.Custom.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="50%w"
            >
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/activity_content_ic_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/myviewtest"
                />
            <!-- 模糊图里面的布局 -->
            <com.example.yuanmu.lunbo.Custom.PercentLinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="60%h"
                >
                <!-- 模糊图里面的小图片 -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_widthPercent="80%h">
                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@mipmap/myviewtest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/sign_up"
                        />
                </FrameLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:textSize="18sp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="【 缘一起 】广州大型单身相亲交友活动"
                        />
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_user_white"
                            />
                        <TextView
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="90人报名"
                            />
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_hook"
                            />
                     <TextView
                         android:layout_marginLeft="2dp"
                         android:textColor="@color/white"
                         android:textSize="12sp"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="发布者已认证"
                         />
                    </LinearLayout>
                </LinearLayout>
            </com.example.yuanmu.lunbo.Custom.PercentLinearLayout>
        </com.example.yuanmu.lunbo.Custom.PercentRelativeLayout>
    </com.example.yuanmu.lunbo.Custom.PercentLinearLayout>
    <!-- 讨论组 -->
    <LinearLayout
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/icon_discussion_group"
                />
        <TextView
            android:textColor="@color/grayStyle"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="讨论组"
            />
        </LinearLayout>
    </LinearLayout>
    <!-- 间隔线 -->
    <TextView
        android:background="@color/grayish"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/activity_position"
        android:padding="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/position_IM"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/position"
            />
        <!-- 位置 -->
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/position_IM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大千骨头王（同和店）"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/right_arrow"
            />
    </RelativeLayout>
    <TextView
        android:background="@color/grayish"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <!-- 时间布局 -->
    <LinearLayout
        android:padding="5dp"
        android:paddingLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_gravity="center"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/clock"
            />
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9月11日13:30-17:30"
            />
    </LinearLayout>
    <TextView
        android:background="@color/grayish"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <!-- 活动类型 -->
    <LinearLayout
        android:padding="5dp"
        android:paddingLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_gravity="center"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/icon_party"
            />
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交友聚会"
            />
    </LinearLayout>
    <TextView
        android:background="@color/grayish"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活动介绍"
        />
    <TextView
        android:textColor="@color/grayStyle"
        android:padding="5dp"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="就会被国家合格不要 就不要u会hi会胡胡胡胡胡就会被国家合格不要 就不要u会hi会胡胡胡胡胡就会被国家合格不要 就不要u会hi会胡胡胡胡胡"
        />
    <!-- 间隔线-->
    <TextView
        android:background="@color/grayish"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <!-- 主办方 -->
<RelativeLayout
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主办方"
        />
    <TextView
        android:layout_toLeftOf="@+id/a_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        />
    <!-- 右边箭头-->
    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/a_right_arrow"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/right_arrow"
        />
</RelativeLayout>
    <!-- 间隔线-->
    <TextView
        android:background="@color/grayish"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/NOA_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报名人数"
            />
        <TextView
            android:textSize="12dp"
            android:layout_toLeftOf="@+id/c_ri_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="68人"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/c_ri_arrow"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/arrow_right"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/NOA_TV"
            android:id="@+id/c_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            ></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <TextView
        android:background="@color/grayish"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</LinearLayout>
</ScrollView>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        >
        <TextView
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/min_fillet"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="报名"
            />
    </LinearLayout>
</RelativeLayout>